{% block create %}
    <turbo-stream action="append" target="messages">
        <template>
            <div id="{{ 'message_' ~ message.id }}" class="d-flex message-item mb-2" data-author-id="{{ message.author.id }}">
                <div class="message-bubble" style="max-width: 70%; word-wrap: break-word;">
                    <div class="message-content p-3 rounded-3">
                        {{ message.content }}
                    </div>
                    <div class="message-time mt-1">
                        <small class="text-muted timestamp" style="font-size: 0.75rem;"
                               data-timestamp="{{ message.createdAt ? message.createdAt.timestamp : 'now' }}"
                              >
                            <i class="fas fa-clock me-1"></i>
                            <span class="time-display">
                                {{ message.createdAt ? message.createdAt|date('d/m/Y H:i') : 'Maintenant' }}
                            </span>
                        </small>
                    </div>
                </div>
            </div>
            <style>
                .message-bubble {
                    animation: fadeInUp 0.3s ease-out;
                }
                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(10px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
            </style>
            <script>
                // Convertir les timestamps des nouveaux messages
                setTimeout(() => {
                    if (window.convertTimestampsToLocal) {
                        window.convertTimestampsToLocal();
                    }
                }, 100);
            </script>
        </template>
    </turbo-stream>
{% endblock %}

{% block update %} {% endblock %}
{% block remove %} {% endblock %}
