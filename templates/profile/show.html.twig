{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-user me-2"></i>Mon Profil
                    </h3>
                    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>Modifier
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="avatar-placeholder bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-3x text-white"></i>
                            </div>
                            <h4 class="mt-3">
                                {% if user.fullName %}
                                    {{ user.fullName }}
                                {% else %}
                                    {{ user.email }}
                                {% endif %}
                            </h4>
                        </div>
                        <div class="col-md-8">
                            <div class="row mb-3">
                                <div class="col-sm-4"><strong>Email :</strong></div>
                                <div class="col-sm-8">{{ user.email }}</div>
                            </div>

                            {% if user.firstName %}
                                <div class="row mb-3">
                                    <div class="col-sm-4"><strong>Prénom :</strong></div>
                                    <div class="col-sm-8">{{ user.firstName }}</div>
                                </div>
                            {% endif %}

                            {% if user.lastName %}
                                <div class="row mb-3">
                                    <div class="col-sm-4"><strong>Nom :</strong></div>
                                    <div class="col-sm-8">{{ user.lastName }}</div>
                                </div>
                            {% endif %}

                            <div class="row mb-3">
                                <div class="col-sm-4"><strong>Membre depuis :</strong></div>
                                <div class="col-sm-8">{{ user.createdAt|date('d/m/Y à H:i') }}</div>
                            </div>

                            {% if user.updatedAt %}
                                <div class="row mb-3">
                                    <div class="col-sm-4"><strong>Dernière modification :</strong></div>
                                    <div class="col-sm-8">{{ user.updatedAt|date('d/m/Y à H:i') }}</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>Modifier mes informations
                            </a>
                        </div>
                        <div class="col-md-6 text-end">
                            <a href="{{ path('app_profile_change_password') }}" class="btn btn-outline-warning">
                                <i class="fas fa-key me-1"></i>Changer mon mot de passe
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
